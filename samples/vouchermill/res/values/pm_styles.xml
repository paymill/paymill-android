<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Colors -->
    <color name="backgroundColor">#FFFFFFFF</color>
    
    <!-- Button Colors -->
    <color name="buttonTextColor">#FFFFFF</color>
    <color name="buttonTextShadowColor">#000000</color>
    <color name="buttonDefaultColor">#FFEF5322</color>
    <color name="buttonDefaultStrokeColor">#891C1C</color>
    <color name="buttonPressedColor">#891C1C</color>
    <color name="buttonPressedStrokeColor">#891C1C</color>
    
    <!-- Label Colors -->
    <color name="labelTextColor">#000000</color>
    
    <!-- EditText Colors -->
    <color name="editTextBackgroundColor">#FFFFFF</color>
    <color name="editTextBorderColor">#FFEF5322</color>
    <color name="editTextInactiveBorderColor">#999999</color>
    <color name="errorTextColor">#FFFF0000</color>
    <color name="defaultTextColor">#FF000000</color>
    
    <!-- SwitchButton Colors -->
    <color name="switchButtonLeftNotPressedColor">#FFEF5322</color>
    <color name="switchButtonRightNotPressedColor">#FFEF5322</color>
    <color name="switchButtonLeftPressedColor">#891C1C</color>
    <color name="switchButtonRightPressedColor">#891C1C</color>
    <color name="switchButtonLeftNotPressedStrokeColor">#891C1C</color>
    <color name="switchButtonRightNotPressedStrokeColor">#891C1C</color>
    <color name="switchButtonLeftPressedStrokeColor">#891C1C</color>
    <color name="switchButtonRightPressedStrokeColor">#891C1C</color>
    
    <!-- SafeStore colors -->
    <color name="paymentRowSelectedColor">#FFEF5322</color>

    <!-- Dimensions -->
    <!-- Button Dimensions -->
    <dimen name="buttonDefaultStrokeWidth">1dp</dimen>
    <dimen name="buttonDefaultCornerRadius">5dp</dimen>
    <dimen name="buttonPressedStrokeWidth">1dp</dimen>
    <dimen name="buttonPressedCornerRadius">5dp</dimen>
    <dimen name="buttonVerticalPadding">5dp</dimen>
    <dimen name="buttonHorizontalPadding">10dp</dimen>

    <!-- SwitchButton Dimensions -->
    <dimen name="switchButtonLeftNotPressedStrokeWidth">1dp</dimen>
    <dimen name="switchButtonRightNotPressedStrokeWidth">1dp</dimen>
    <dimen name="switchButtonLeftPressedStrokeWidth">1dp</dimen>
    <dimen name="switchButtonRightPressedStrokeWidth">1dp</dimen>
    <dimen name="switchButtonVerticalPadding">5dp</dimen>
    <dimen name="switchButtonHorizontalPadding">10dp</dimen>

    <!-- EditText Dimensions -->
    <dimen name="customEditTextVerticalPadding">3dp</dimen>
    <dimen name="customEditTextHorizontalPadding">8dp</dimen>

    <!-- Safestore Chooser Dimensions -->
    <dimen name="safestoreChooserSize">18sp</dimen>
    <dimen name="chooserItemMarginTop">15dp</dimen>
    <dimen name="chooserItemMarginBottom">15dp</dimen>
    <dimen name="chooserItemMarginSide">5dp</dimen>
    <dimen name="chooserItemMarginLeft">12dp</dimen>
    <dimen name="chooserButtonWidth">100dp</dimen>
    <dimen name="chooserButtonWidthReset">210dp</dimen>

    <!-- PaymentItem Dimensions -->
    <dimen name="paymentItemMarginSide">5dp</dimen>
    <dimen name="paymentItemImageSize">32dp</dimen>
    <dimen name="paymentItemSeparatorMargin">2dp</dimen>
    <dimen name="paymentItemMarginTop">20dp</dimen>
    <dimen name="paymentItemInnerMargin">5dp</dimen>
    <dimen name="paymentItemHolderNameSize">25dp</dimen>
    <dimen name="paymentItemLogoWidth">75dp</dimen>
    <dimen name="paymentItemLogoHeight">25dp</dimen>
    <dimen name="paymentItemCardNumberSize">16dp</dimen>

    <!-- Styles -->
    <style name="buttonStyle">
        <item name="android:background">@drawable/pm_button_background</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">@color/buttonTextShadowColor</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="labelStyle">
        <item name="android:textColor">@color/labelTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
	</style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/pm_edit_text_background</item>
        <item name="com.paymill.android.samples.vouchermill:borderColor">@color/editTextBorderColor</item>
        <item name="com.paymill.android.samples.vouchermill:inactiveBorderColor">@color/editTextInactiveBorderColor</item>
    </style>

</resources>